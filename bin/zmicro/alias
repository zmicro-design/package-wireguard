#!/bin/bash

help() {
  echo "Usage:"
  echo "  zmicro wireguard <args ...>"
  echo ""

  wireguard --help
}

version() {
  wireguard --version
}

core() {
  case $1 in
  -h | --help | help)
    help
    ;;
  -v | --version | version)
    version
    ;;
  *)
    wireguard "$@"
    ;;
  esac
}

run() {
  core "$@"
}

run "$@"
